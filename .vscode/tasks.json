{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks":
    [
        {
            "label": "build",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-I${workspaceFolder}/headers",
                "-o ${workspaceFolder}/amazonok",
                "${workspaceFolder}/sources/*.cpp"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "command": "rm",
            "args": [
                "${workspaceFolder}/amazonok"
            ],
            "problemMatcher": []
        }
    ]
}